@using AspNetCoreMvc.Models;
@model List<Product>;
@{
    ViewData["Title"] = "GetDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="tblProduct" class="table table-striped table-bordered table-hover" style="width:100%">
    <thead>
        <tr>
            <th>Məhsul ID</th>
            <th>Məhsul Adı</th>
            <th>Stok Sayı</th>
            <th>Qiyməti</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.UnitsInStock</td>
                <td>@item.UnitPrice</td>
            </tr>
        }
    <tbody />
</table>
@section Scripts{
    <script src="~/js/site.js"></script>
}
<a href="/Category/Index" class="btn btn-danger" style="width:120px">Bağla</a>

