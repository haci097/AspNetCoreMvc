@using AspNetCoreMvc.Models;
@model List<Category>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_NotificationPartial" />

<table id="tblCategory" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Kateqoriya ID</th>
            <th>Kateqoriya Adı</th>
            <th>Redaktə Et</th>
            <th>Sil</th>
            <th>Detallar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td><a href="/Category/GetCategoryById?id=@item.CategoryId" class="btn btn-success" style="width:100px">Redaktə Et</a></td>
                <td><button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@("#DeleteCategory-"+item.CategoryId)" style="width:100px">Sil</button></td>
                <td><a href="/Category/GetDetails?id=@item.CategoryId" class="btn btn-info" style="width:100px">Detallar</a></td>
                @await Html.PartialAsync("_DeleteCategoryPartial", item)
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script src="~/js/site.js"></script>
}
<a href="/Category/NewCategory" class="btn btn-primary" style="width:120px">Yeni Əlavə Et</a>
