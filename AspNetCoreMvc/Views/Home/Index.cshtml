@using AspNetCoreMvc.Models;
@model List<ProductDetailDto>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_NotificationPartial" />

<table id="tblProduct" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Məhsul ID</th>
            <th>Məhsul Adı</th>
            <th>Kateqoriya Adı</th>
            <th>Stok Sayı</th>
            <th>Qiyməti</th>
            <th>Redaktə Et</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.UnitsInStock</td>
                <td>@item.UnitPrice</td>
                <td><a href="/Home/UpdateProduct?id=@item.ProductId" class="btn btn-success" style="width:100px">Redaktə Et</a></td>
                <td><button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@("#DeleteProduct-"+item.ProductId)" style="width:100px">Sil</button></td>
                @await Html.PartialAsync("_DeleteProductPartial", item)
            </tr>
        }
    <tbody />
</table>
@section Scripts{
    <script src="~/js/site.js"></script>
}
<a href="/Home/AddProduct" class="btn btn-primary" style="width:120px">Yeni Əlavə Et</a>
