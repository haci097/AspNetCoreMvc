@model AspNetCoreMvc.Models.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @using (Html.BeginForm("AddProduct", "Home", FormMethod.Post))
    {
        <b>Məhsul Adı</b>
        @Html.TextBoxFor(p=>p.ProductName, new { @class = "form-control" })
        <br />
        <b>Kateqoriya Adı</b>
        @Html.DropDownListFor(p=>p.CategoryId, (List<SelectListItem>)ViewBag.v1, "Kateqoriya Seçin", new { @class = "form-control" })
        <br />
        <b>Stok Sayı</b>
        @Html.TextBoxFor(p=>p.UnitsInStock, new { @class = "form-control", @type = "number" })
        <br />
        <b>Qiyməti</b>
        @Html.TextBoxFor(p=>p.UnitPrice, new { @class = "form-control", @type = "number" })
        <span class="alert-danger">@ViewData["ValidationResults"]</span>
        <br />
        <button class="btn btn-info" style="width:120px">Yadda Saxla</button>
        <a href="/Home/Index" class="btn btn-danger" style="width:120px">İmtina Et</a>
    }
</div>

